<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
      <%= image_tag "http://i.giphy.com/3o6ZsYPhrpZVCwsEOA.gif" %>
      <% end %>
    </div>


    <ul>

      <li><%= link_to "Blog", root_path %> </li>
      <li><%= link_to "About", about_path %> </li>
    </ul>
<% if !user_signed_in? %>
		<p class="sign_in"><%= link_to "Admin Login", new_user_session_path %></p>

<% end %>
  </div>

  <div id="main_content">
    <div id="header">
      <% if current_page?(root_path) %>

      <% elsif current_page? (about_path) %>
      <p>About</p>
      <% else %>
      <%= link_to "Back to All Posts", root_path %>
<% end %>
<% if user_signed_in? %>
<div class="buttons">
    <button class="button"><%= link_to "New Post", new_post_path %></button>
        <button class="button"><%= link_to 'Log out', destroy_user_session_path, :method=>'delete' %></li>

      </div>

      <%end%>
 <div id ="banner">
      <%= image_tag "https://cdn.pbrd.co/images/cOLHrkK7X.jpg" %>
    </div>



  <% flash.each do |name, msg| %>
  <% content_tag(:div, msg, class:"alert")%>
<%end%>

<%= yield %>
  </div>
</body>
</html>
